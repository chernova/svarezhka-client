.left-menu
  margin 2rem 0 1rem
  margin-left auto
  width $left-menu-width
 
  .menu-title
    text-transform uppercase
    color $grey-5
    font-weight bold
    font-size 1.125rem
    margin-bottom .75rem

  .menu-item
    color $grey-4
    margin-bottom .125rem
    & a
      color inherit
      &.active
        font-weight bold

    a:hover
      text-decoration underline

.footer
  border-top 1px solid $grey-3
  color $grey-3
  padding .75rem 0
  margin-left auto
  width $left-menu-width
