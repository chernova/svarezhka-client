*, ::after, ::before
  box-sizing border-box

html
  min-height 100%
  position relative

html, body
  height 100%

body 
  color $text-color
  background-image linear-gradient(to right, $body-bg-start, $body-bg-end)
  line-height 1.5
  text-align left

body, input, select, button
  font-family $font-family
  font-size 1rem

strong, b
  font-weight bold

a
  color $primary-color
  text-decoration none
  transition color .2s ease-in-out
  &:hover
    color darken($primary-color, 25%)

p
  margin-bottom 1rem

h1, h2, h3, h4, h5, h6
  font-family inherit
  margin-bottom .5rem
  line-height 1.2
  font-weight 500
h1
  font-size 2rem

.app
  display flex
  flex-direction column
  align-items: stretch
  height 100%
