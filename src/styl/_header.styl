.header 
  background-color $grey-0
  box-shadow 0 1px 1px $box-shadow
  height $header-height

  > .container
    display flex
    align-items center
    justify-content space-between
    flex-wrap wrap
    height 100%

  .logo 
    font-weight bold
    font-size 21px
    color $grey-4
    padding 0 1rem

  .right
    display flex
    align-items center
    align-self stretch
    color $grey-4
    .icon 
      padding 0 1rem
      .la
        color $grey-2
        font-size 2rem

  .name
    margin-left .5rem
    margin-right .5rem

  .user
    display flex
    align-items center
    align-self stretch
    padding 0 .5rem
    background-color $grey-0
    border-top-left-radius $border-radius
    border-top-right-radius $border-radius
    cursor pointer
    user-select none
    position relative
    z-index 10    
    transition box-shadow .1s ease-in-out
    // &:hover 
      // box-shadow 0 -1px 2px $box-shadow
    &:focus .sub-menu.show,
    .sub-menu.show
      visibility visible
      opacity 1
      z-index 1
      transform translateY(0%)
      transition-delay 0s, 0s, .2s

    .sub-menu
      background-color $grey-0
      box-shadow 0 1px 2px $box-shadow
      padding .5rem 0
      min-width 170px
      border-bottom-left-radius $border-radius
      border-bottom-right-radius $border-radius
      visibility hidden
      opacity 0
      position absolute
      top 100%
      right 0
      z-index -1
      transform translateY(-2rem)
      transition all .2s ease-in-out, visibility 0s linear .2s, z-index 0s linear .01s
      
      li > a 
        display block
        padding .5rem 1rem
        font-size .875rem
        color $grey-3
        font-weight bold
        &:hover
          background-color $grey-1
        .la 
          font-size 1.25rem
          margin-right .5rem
          vertical-align bottom

      .divider
        border-top 1px solid $grey-2
        height 1px
        margin .5rem 1rem

    .avatar
      border-radius 50%
      overflow hidden
      width 56px
      height 56px
      img 
        max-width 100%
        object-fit cover
        
    .menu-expander
      margin-left .75rem
      .la
        font-size 2rem

